# ===========================================
# PHARMA AI BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# MongoDB Configuration (LOCAL ONLY)
MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=pharma_ai_db

# LM Studio Configuration
# Ensure LM Studio is running on port 1234 with a model loaded
LMSTUDIO_MODEL_NAME=mistral-7b-instruct-v0.3-q6_k
LMSTUDIO_MAX_TOKENS=4096
LMSTUDIO_TEMPERATURE=0.2

# Cloud LLM Configuration (Optional - Currently disabled)
CLOUD_ENABLED=false
CLOUD_PROVIDER=claude
CLOUD_API_KEY=

# External API Timeouts
EXTERNAL_REQUEST_TIMEOUT=15
EXTERNAL_MAX_RETRIES=3
EXTERNAL_CACHE_TTL=86400

# PubMed API (Free - no key required)
PUBMED_BASE_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
PUBMED_RATE_LIMIT_RPS=3

# ClinicalTrials.gov API (Free - no key required)
CLINICALTRIALS_BASE_URL=https://clinicaltrials.gov/api/query/study_fields
CLINICALTRIALS_MAX_RECORDS=40
CLINICALTRIALS_CACHE_TTL=86400

# PatentsView API (Free - optional key)
PATENTSVIEW_BASE_URL=https://api.patentsview.org/patents/query
PATENTSVIEW_PAGE_SIZE=20
PATENTSVIEW_CACHE_TTL=86400
PATENTSVIEW_API_KEY=

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Security
SECRET_KEY=your-secret-key-change-in-production

# Application
DEBUG=true
ENVIRONMENT=development
